<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.textfield.TextInputLayout style="@style/iperf3TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/iperf3_ip"
                            style="@style/iperf3TextInputEditText"
                            android:hint="IP Address"
                            android:inputType="textUri" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/iperf3TextInputLayout"
                        android:layout_marginBottom="4dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/iperf3_port"
                            style="@style/iperf3TextInputEditText"
                            android:hint="Port"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/iperf3TextInputLayout"
                        app:suffixText="Mb">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/iperf3_bandwidth"
                            style="@style/iperf3TextInputEditText"
                            android:hint="Bandwidth"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/iperf3TextInputLayout"
                        app:suffixText="s">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/iperf3_duration"
                            style="@style/iperf3TextInputEditText"
                            android:hint="Duration"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/iperf3TextInputLayout"
                        app:suffixText="s">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/iperf3_interval"
                            style="@style/iperf3TextInputEditText"
                            android:hint="Interval"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout style="@style/iperf3TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/iperf3_bytes"
                            style="@style/iperf3TextInputEditText"
                            android:hint="Bytes"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout style="@style/iperf3TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/iperf3_parallel"
                            style="@style/iperf3TextInputEditText"
                            android:hint="Streams"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout style="@style/iperf3TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/iperf3_cport"
                            style="@style/iperf3TextInputEditText"
                            android:hint="Client Port"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:padding="4dp"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/iperf3_mode_toggle_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/iperf3_client_button"
                        style="@style/CustomUnifiedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Client" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/iperf3_server_button"
                        style="@style/CustomUnifiedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Server" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/iperf3_protocol_toggle_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/iperf3_tcp_button"
                        style="@style/CustomUnifiedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TCP" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/iperf3_udp_button"
                        style="@style/CustomUnifiedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="UDP" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/iperf3_direction_toggle_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/iperf3_download_button"
                        style="@style/CustomUnifiedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Download" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/iperf3_upload_button"
                        style="@style/CustomUnifiedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Upload" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/iperf3_bidir_button"
                        style="@style/CustomUnifiedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BiDir" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/iperf3_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/execute_iperf_command" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        style="@style/Widget.Material3.BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/runners_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>